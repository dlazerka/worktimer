<?xml version="1.0" encoding="utf-8" standalone="no"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
	<application>lazerka-worktimer</application>
	<module>default</module>
	<version>1-first</version>

	<threadsafe>true</threadsafe>

	<basic-scaling>
		<!-- Value 1 is buggy in Dev server:
			https://code.google.com/p/googleappengine/issues/detail?id=10661
		-->
		<max-instances>10</max-instances>
		<idle-timeout>10m</idle-timeout>
	</basic-scaling>

	<!--
	   F1    128 MB   600 Mhz $0.05
	   F2    256 MB   1.2 Ghz $0.10
	   F4    512 MB   2.4 Ghz $0.20
	   F4_1G 1024 MB  2.4 Ghz $0.30
	   -->
	<instance-class>F4_1G</instance-class>

	<use-google-connector-j>true</use-google-connector-j>

	<system-properties>
		<property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
	</system-properties>

	<static-files>
		<include path="/favicon.ico"/>
		<include path="/robots.txt"/>

		<include path="/font/*" expiration="365d"/>

		<include path="/image/**.png"/>
		<include path="/image/**.jpeg"/>
		<include path="/image/**.jpg"/>
		<include path="/image/**.svg"/>

		<include path="/**.js"/>
		<include path="/**.css"/>
		<include path="/**.html"/>
	</static-files>

</appengine-web-app>
